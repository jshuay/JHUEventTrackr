<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/event_name"
        style="@style/eventListRowLayoutAbove"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="event_name"/>

    <TextView
        android:id="@+id/event_start"
        style="@style/eventListRowLayoutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/event_name"
        android:text="event_start" />

     <TextView
         android:id="@+id/event_desc"
         style="@style/eventListRowLayoutBelow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/event_start"
         android:maxLines="2"
         android:ellipsize="end"
         android:text="event_desc" />

</RelativeLayout>
