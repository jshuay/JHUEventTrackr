<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black">
        
        <item name="android:textColor">#FFF</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can  go here.
        -->
    </style>
    

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. 
        <item name="android:windowBackground">@color/Hopkins_Blue</item>
        <item name="android:cacheColorHint">@color/Hopkins_Blue</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:divider">#FFFFFF</item> -->
        
    </style>
    <style name="eventListRowLayoutAbove">
        <item name="android:drawablePadding">5sp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="eventListRowLayoutBelow">

        <item name="android:textSize">15sp</item>        
    </style>
    <style name="eventListRowLayoutDate" parent="eventListRowLayoutBelow">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="listStyle" parent="eventListRowLayoutAbove">

    </style>
</resources>
